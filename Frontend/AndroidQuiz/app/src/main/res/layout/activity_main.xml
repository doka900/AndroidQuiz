<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:text="AndroidQuiz"
            android:textAlignment="center"
            android:textColor="@color/golden"
            android:textSize="30dp" />

        <Button
            android:id="@+id/activity_main_loginPageButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:text="Logovanje"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/activity_main_homepageButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:text="POCETNA"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/activity_main_profilePageButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:text="PROFIL"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/activity_main_kzzPageButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:text="Ko zna zna"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/activity_main_spojnicePageButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:text="Spojnice"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/activity_main_asocijacijePageButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:text="ASOCIJACIJE"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/activity_main_skockoPageButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:text="SKOCKO"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/activity_main_KPKPageButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:text="KORAK PO KORAK"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/activity_main_mojBrojPageButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:text="MOJ BROJ"
            android:textSize="15sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>