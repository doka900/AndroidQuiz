<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SpojniceActivity">
    <include
        android:id="@+id/resultbar"
        layout="@layout/resultbar" />

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:text="Spojnice"
            android:textAlignment="center"
            android:textColor="@color/golden"
            android:textSize="25sp" />

        <Button
            android:id="@+id/spojnice_option11"
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="120dp"
            android:text="A"
            android:textColor="@color/golden"
            android:textSize="15sp" />

        <Button
            android:id="@+id/spojnice_option21"
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:layout_alignLeft="@id/spojnice_option11"
            android:layout_below="@id/spojnice_option11"
            android:layout_marginTop="10dp"
            android:text="B"
            android:textColor="@color/golden"
            android:textSize="15sp" />

        <Button
            android:id="@+id/spojnice_option31"
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@id/spojnice_option21"
            android:layout_below="@id/spojnice_option21"
            android:text="C"
            android:textColor="@color/golden"
            android:textSize="15sp" />

        <Button
            android:id="@+id/spojnice_option41"
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:layout_alignLeft="@id/spojnice_option31"
            android:layout_below="@id/spojnice_option31"
            android:layout_marginTop="10dp"
            android:text="D"
            android:textColor="@color/golden"
            android:textSize="15sp" />

        <Button
            android:id="@+id/spojnice_option51"
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:layout_alignLeft="@id/spojnice_option41"
            android:layout_below="@id/spojnice_option41"
            android:layout_marginTop="10dp"
            android:text="E"
            android:textColor="@color/golden"
            android:textSize="15sp" />



        <Button
            android:id="@+id/spojnice_option12"
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="120dp"
            android:layout_alignParentRight="true"
            android:text="E"
            android:textColor="@color/golden"
            android:textSize="15sp" />

        <Button
            android:id="@+id/spojnice_option22"
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:layout_alignLeft="@id/spojnice_option12"
            android:layout_below="@id/spojnice_option12"
            android:layout_marginTop="10dp"
            android:text="D"
            android:textColor="@color/golden"
            android:textSize="15sp" />

        <Button
            android:id="@+id/spojnice_option32"
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@id/spojnice_option22"
            android:layout_below="@id/spojnice_option22"
            android:text="C"
            android:textColor="@color/golden"
            android:textSize="15sp" />

        <Button
            android:id="@+id/spojnice_option42"
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:layout_alignLeft="@id/spojnice_option32"
            android:layout_below="@id/spojnice_option32"
            android:layout_marginTop="10dp"
            android:text="B"
            android:textColor="@color/golden"
            android:textSize="15sp" />

        <Button
            android:id="@+id/spojnice_option52"
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:layout_alignLeft="@id/spojnice_option42"
            android:layout_below="@id/spojnice_option42"
            android:layout_marginTop="10dp"
            android:text="A"
            android:textColor="@color/golden"
            android:textSize="15sp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center">
        <include
            android:id="@+id/gamebar"
            layout="@layout/gamebar" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>